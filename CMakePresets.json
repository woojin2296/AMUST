{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "macos-release",
      "displayName": "macOS Release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/macos-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "AMUST_BUNDLE": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/linux-Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "AMUST_BUNDLE": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos-release",
      "configurePreset": "macos-release"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    }
  ]
}

